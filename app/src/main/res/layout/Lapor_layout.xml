<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/judulImgReg"
        android:layout_width="124dp"
        android:layout_height="81dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.104"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04"
        app:srcCompat="@drawable/dowe" />

    <TextView
        android:id="@+id/judulViewReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sihlakan untuk mengisi data"
        android:textSize="26sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@id/judulImgReg"
        app:layout_constraintStart_toStartOf="@id/judulImgReg" />

    <TextView
        android:id="@+id/namaJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama Lengkap"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:textStyle="bold"

        app:layout_constraintTop_toBottomOf="@id/judulViewReg"
        app:layout_constraintStart_toStartOf="@id/judulViewReg"/>


    <EditText
        android:id="@+id/editTextNama"
        android:layout_width="361dp"
        android:layout_height="46dp"
        android:background="@drawable/textboxt_melengkung"
        android:hint="nama"
        android:paddingStart="16dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@id/namaJudul"
        app:layout_constraintStart_toStartOf="@id/namaJudul"
/>

    <TextView
        android:id="@+id/UsernameJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/editTextNama"
        app:layout_constraintStart_toStartOf="@id/editTextNama"/>
    <EditText
        android:id="@+id/editTextUsername"
        android:layout_width="361dp"
        android:layout_height="46dp"
        android:background="@drawable/textboxt_melengkung"
        android:hint="username"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/UsernameJudul"
        app:layout_constraintStart_toStartOf="@id/UsernameJudul" />

    <TextView
        android:id="@+id/EmailJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/editTextUsername"
        app:layout_constraintStart_toStartOf="@id/editTextUsername"/>
    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="361dp"
        android:layout_height="46dp"
        android:background="@drawable/textboxt_melengkung"
        android:hint="email"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/EmailJudul"
        app:layout_constraintStart_toStartOf="@id/EmailJudul" />

    <TextView
        android:id="@+id/passJudul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:layout_marginTop="4dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/editTextEmail"
        app:layout_constraintStart_toStartOf="@id/editTextUsername"/>
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="361dp"
        android:layout_height="46dp"
        android:background="@drawable/textboxt_melengkung"
        android:hint="password"
        android:paddingStart="16dp"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/passJudul"
        app:layout_constraintStart_toStartOf="@id/passJudul" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDaftar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/rectangle"
        android:textColor="@color/white"
        android:text="Daftar"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextPassword"
        android:layout_marginTop="40dp">
    </androidx.appcompat.widget.AppCompatButton>




</androidx.constraintlayout.widget.ConstraintLayout>